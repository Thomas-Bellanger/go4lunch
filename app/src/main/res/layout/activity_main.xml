<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity.MainActivity">
    <!-- IMAGE VIEW FIREBASE OC -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_large_margin"
        android:background="@drawable/ic_baseline_dinner_dining"
        app:tint="@color/black" />

    <!-- TITLE FIREBASE OC -->
    <TextView
        android:id="@+id/go4lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/app_name"
        android:textSize="@dimen/default_title_size"
        android:textStyle="bold" />

    <!-- DESCRIPTION FIREBASE OC -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/main_activity_description"
        android:textSize="@dimen/default_text_size" />

    <!-- BUTTONS CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_large_margin"
        android:gravity="bottom"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>

