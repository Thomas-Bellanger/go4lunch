<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_layout_height"
    android:orientation="vertical"
    android:background="@drawable/menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Go4Lunch"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nav_header_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/nav_header_avatar"
        android:layout_width="@dimen/nav_header_account_size"
        android:layout_height="@dimen/nav_header_account_size"
        android:layout_marginStart="@dimen/nav_header_avatar_margin_left"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nav_header_name" />

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_go4lunch_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nav_header_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.853" />

    <TextView
        android:id="@+id/nav_header_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_drawer_mail"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_email_text_size"
        app:layout_constraintStart_toStartOf="@+id/nav_header_name"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_name" />

</androidx.constraintlayout.widget.ConstraintLayout>