<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardview_margin_left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="@dimen/restaurant_item_text_width"
                android:layout_height="@dimen/restaurant_item_text_height"
                android:text="restaurant_name"
                android:textSize="@dimen/restaurant_item_text_size"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/restaurant_item_distance_size"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/restaurant_item_distance_margin_left">

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="distance"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/restaurant_item_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/restaurant_item_avatar_margin_left">

            <ImageView
                android:id="@+id/restaurant_avatar"
                android:layout_width="@dimen/restaurant_item_avatar_width"
                android:layout_height="@dimen/restaurant_item_avatar_height"
                android:layout_marginTop="@dimen/restaurant_item_avatar_margin_top"
                android:gravity="end"
                app:srcCompat="@drawable/restaurant" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/linearLayout2_margin_left"
            android:layout_marginTop="@dimen/linearLayout2_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurant_style"
                android:layout_width="@dimen/restaurant_item_style_width"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="style"
                android:textSize="@dimen/restaurant_item_text_size" />

            <TextView
                android:id="@+id/restaurant_adress"
                android:layout_width="@dimen/restaurant_item_adress_width"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/restaurant_item_adress_margin_left"
                android:text="adress"
                android:textSize="@dimen/restaurant_item_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/restaurant_item_icon_person_margin_left"
            android:layout_marginTop="@dimen/linearLayout2_margin_top">

            <ImageView
                android:id="@+id/personPicture"
                android:layout_width="@dimen/icon_person_size"
                android:layout_height="@dimen/icon_person_size"
                android:src="@drawable/baseline_person_outline_black_18dp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1)"
                android:textSize="@dimen/restaurant_item_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/restaurant_item_linearlayout3_margin_left"
            android:layout_marginTop="@dimen/restaurant_item_linearlayout3_margin_top">

            <TextView
                android:id="@+id/restaurant_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open-close"
                android:textSize="@dimen/restaurant_item_text_size"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/restaurant_item_star_rate_margin_left"
            android:layout_marginTop="@dimen/restaurant_item_linearlayout3_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stars3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/stars2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:tint="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>