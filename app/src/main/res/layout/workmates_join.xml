<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/workmate_join_layout_margin_top">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/workmate_join_avatar_size"
        android:layout_height="@dimen/workmate_join_avatar_size"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/joiner_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/workmate_join_name_margin_left"
        android:gravity="center"
        android:text="name"
        android:textSize="@dimen/workmate_join_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/restaurant_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/workmate_join_is_joinig_margin_left"
        android:gravity="center"
        android:text="@string/is_joining"
        android:textSize="@dimen/workmate_join_text_size"
        android:textStyle="bold" />

</LinearLayout>